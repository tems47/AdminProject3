@model Admination.Bill
@{
    ViewBag.Title = "BillDetails";
    Layout = "~/Views/Shared/_SideBar.cshtml";
}


<div class="container-fluid">
    <h1 class="mt-4">Eidt Bill</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item">
            <a href="@Url.Action("Index", null, new { area = string.Empty, controller = "Admin" }, Request.Url.Scheme)">
                Dashboard
            </a>
        </li>
        <li class="breadcrumb-item active">Page</li>
        <li class="breadcrumb-item active">Finance</li>
        <li class="breadcrumb-item active">Bills</li>
    </ol>
    <div class="card mb-4">
        <div class="card-body">
            INSTRUCTIONS
            <hr />
            <p>Bills can't delete!</p>
            <p>You just admit to change bill's status</p>
            <a>***</a>
        </div>
    </div>

    <div class="container-fluid card mb-4">
        <hr />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="row card-body">
                <div class="col-md-6">
                    <dl class="dl-horizontal">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Id_Bill)

                        <dt>
                            @Html.LabelFor(m => m.Id_Bou, "Id")
                        </dt>

                        <dd>
                            @Html.EditorFor(model => model.Id_Bou, new { htmlAttributes = new { @class = "form-control", @readonly = "true" } })
                        </dd>

                        <dt>
                            @Html.LabelFor(model => model.Id_Cus, "Seller")
                        </dt>

                        <dd>
                            @Html.EditorFor(model => model.Id_Cus, new { htmlAttributes = new { @class = "form-control", @readonly = "true" } })
                            @Html.ActionLink("-details", "CustomerDetails", new { id = Model.Id_Cus })
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Image)
                        </dt>

                        <dd>
                            @Html.EditorFor(model => model.Image, new { htmlAttributes = new { @class = "form-control", @readonly = "true" } })
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>

                        <dd>
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @readonly = "true" } })
                        </dd>

                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="dl-horizontal">

                        <dt>
                            @Html.DisplayNameFor(model => model.Description)
                        </dt>

                        <dd>
                            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", @readonly = "true" } })
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Price)
                        </dt>

                        <dd>
                            @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control", @readonly = "true" } })
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Volume)
                        </dt>

                        <dd>
                            @Html.EditorFor(model => model.Volume, new { htmlAttributes = new { @class = "form-control", @readonly = "true" } })
                        </dd>
                        <dt>
                            @Html.LabelFor(model => model.Order_Date, "Order Date")
                        </dt>

                        <dd>
                            @Html.EditorFor(model => model.Order_Date, new { htmlAttributes = new { @class = "form-control", @readonly = "true" } })
                        </dd>

                        <dt>
                            @Html.LabelFor(model => model.Delivery_Date, "Delivery Date")
                        </dt>

                        <dd>
                            @Html.EditorFor(model => model.Delivery_Date, new { htmlAttributes = new { @class = "form-control", @readonly = "true" } })
                        </dd>

                        <dt>
                            @Html.LabelFor(model => model.Cus_Note, "Note")
                        </dt>

                        <dd>
                            @Html.EditorFor(model => model.Cus_Note, new { htmlAttributes = new { @class = "form-control", @readonly = "true" } })
                        </dd>

                        <dt>
                            @Html.LabelFor(model => model.Bill_Status, "Status")
                        </dt>

                        <dd>
                            @Html.EditorFor(model => model.Bill_Status, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Bill_Status, "", new { @class = "text-danger" })
                        </dd>
                    </dl>
                </div>
            </div>
            <hr />

            <div class="form-group">
                <div class="col-md-offset-2 col-md-12">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        }
    </div>
    <hr />

    <div>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item">
                <p>
                    @Html.ActionLink("Back to List", "Bill")

                </p>
            </li>
        </ol>
    </div>
</div>