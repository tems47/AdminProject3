@model Admination.Customer

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_SideBar.cshtml";
}

<div class="container-fluid">
    <h1 class="mt-4">Create New User</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item">
            <a href="@Url.Action("Index", null, new { area = string.Empty, controller = "Admin" }, Request.Url.Scheme)">
                Dashboard
            </a>
        </li>
        <li class="breadcrumb-item active">UserManagement</li>
    </ol>
    <div class="card mb-4">
        <div class="card-body">
            INSTRUCTIONS
            <hr />
            <p>Remember choose RoleId for user!</p>
            <p>***</p>
        </div>
    </div>

    <div class="container-fluid card mb-4">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Customer</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
